{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/unihub-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=unihub_db;Username=postgres;Password=postgres",
    "MongoDB": "",
    "Redis": "localhost:6379"
  },
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "unihub_db",
    "ConnectionTimeoutSeconds": 30,
    "ServerSelectionTimeoutSeconds": 30,
    "MaxConnectionPoolSize": 100,
    "MinConnectionPoolSize": 0
  },
  "Jwt": {
    "SecretKey": "ThisIsAVeryLongSecretKeyForJWTTokenGenerationThatMustBeAtLeast256BitsLong",
    "Issuer": "UniHub.API",
    "Audience": "UniHub.Client",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7
  },
  "DetailedErrors": false,
  "AllowedHosts": "*"
}
